# App Configuration
APP_ENV=dev
SECRET_KEY=your-secret-key-here
LOG_LEVEL=INFO

# Database (SQLite by default for local development)
DATABASE_URL=sqlite:///./dev.db

# Redis (optional, only needed if not using inline mode)
REDIS_URL=redis://localhost:6379/0

# Storage Configuration
STORAGE_BACKEND=local
LOCAL_STORAGE_DIR=./_data

# S3/MinIO Storage (optional, only needed if STORAGE_BACKEND=s3)
S3_ENDPOINT=http://localhost:9000
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_BUCKET=ad-assets

# Queue Configuration
QUEUE_MODE=inline

# LLM Configuration
LLM_PROVIDER=groq
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4o-mini
GROQ_API_KEY=your-groq-api-key-here
GROQ_MODEL=llama-3.1-70b-versatile
LOCAL_LLM_ENDPOINT=http://localhost:8001/v1
LOCAL_LLM_MODEL=llama-3.1-8b-instruct
LLM_TIMEOUT_S=30
LLM_MAX_RETRIES=3

# Production Settings
CORS_ORIGINS=http://localhost:5173,http://localhost:3000
RATE_LIMIT_PER_MINUTE=60

# Brand Voice & Similarity
BRAND_VOICE_ENABLED=true
BRAND_VOICE_THRESHOLD=0.7
DIVERSITY_THRESHOLD=0.8

# Policy & Validation
POLICY_STRICT_MODE=false
LOCALE_RULES=en-IN,hi-IN

# Monitoring (optional)
SENTRY_DSN=your-sentry-dsn-here
